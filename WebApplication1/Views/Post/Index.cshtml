@{
    ViewData["Title"] = "Новости";
}

@model IEnumerable<WebApplication1.ViewModels.Post.PostCardViewModel>

@foreach (var post in Model)
{
    <div class="card">
        <div class="card-header">
            <a href="Post/Details/@post.Id">@post.Title</a>
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@post.FileId</p>
                <p>@post.Description</p>
                <footer class="blockquote-footer"> (<cite title="Source Title">@post.Created</cite>)</footer>
            </blockquote>
        </div>
    </div>
}