@model WebApplication1.ViewModels.Product.AddProductViewModel
@{
    ViewData["Title"] = "Добавить товар";
}
<br />
<h3>Добавление товара</h3>
<form asp-action="AddPost" method="get">
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group bmd-form-group">
            <label asp-for="Name" class="bmd-label-floating"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div calss="form-group bmd-form-group">
            <label asp-for="Description" class="bmd-label-floating"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div calss="form-group bmd-form-group">
            <label asp-for="FileId" class="bmd-label-floating"></label>
            <input asp-for="FileId" class="form-control" />
            <span asp-validation-for="FileId" class="text-danger"></span>
        </div>
        <div calss="form-group bmd-form-group">
            <label asp-for="Price" class="bmd-label-floating"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="card-footer justify-content-center">
        <button type="submit" class="btn btn-primary btn-fill btn-lg">Добавить</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}